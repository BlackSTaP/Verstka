<Window x:Class="MMOResourceCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MMO Resource Calculator" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate x:Key="ImageCellTemplate">
            <Image Source="{Binding [Image]}" Width="32" Height="32"/>
        </DataTemplate>
    </Window.Resources>
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="5">
            <Button x:Name="AddColumnButton" Content="Add Column" Width="90" Margin="2" Click="AddColumnButton_Click"/>
            <Button x:Name="AddRowButton" Content="Add Row" Width="90" Margin="2" Click="AddRowButton_Click"/>
            <Button x:Name="SaveButton" Content="Save" Width="90" Margin="2" Click="SaveButton_Click"/>
            <Button x:Name="LoadButton" Content="Load" Width="90" Margin="2" Click="LoadButton_Click"/>
        </StackPanel>
        <DataGrid x:Name="ResourceGrid" AutoGenerateColumns="False" Margin="5" MouseDoubleClick="ResourceGrid_MouseDoubleClick"/>
    </DockPanel>
</Window>
